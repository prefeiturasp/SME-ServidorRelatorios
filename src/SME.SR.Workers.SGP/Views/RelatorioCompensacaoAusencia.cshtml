        function quebrarPagina() {
            elementoPrincipal.appendChild(quebra);
            elementoPrincipal.appendChild(cabecalho.cloneNode(true));
            tamanhoMaximoPagina += tamanhoMaximoPagina;
        }

        function adicionarCampoHtml(componentesHtml) {
            for (var component of componentesHtml) {
                var idComponent = gerarId();
                var tagComponent = stringToHTML(component.outerHTML);
                tagComponent.id = idComponent
                elementoPrincipal.appendChild(tagComponent);
                if (!podeImprimir(idComponent)) {
                    elementoPrincipal.removeChild(tagComponent);
                    if(component.children.length) tratarTagsFilhas(component);
                }
            }
        }

        function tratarTagsFilhas(componenteHtml) {
            switch (componenteHtml.tagName) {
                case 'TABLE':
                    tratarTabela(componenteHtml)
                    break;
                case 'DIV':
                    for (var componenteFilho of componenteHtml.children) {
                        tratarTagsFilhas(componenteFilho)
                    }
                    break;
                default: break;
            }
        }

        function tratarTabela(tabela) {
            const tabelaNova = criarNovaTabela(tabela);
            elementoPrincipal.appendChild(tabelaNova);
            var tbodyTags = tabela.getElementsByTagName('tbody');
            if (tbodyTags.length) {
                var tbody = tbodyTags[0];
                if (tbody !== null) {
                    var trs = tbody.getElementsByTagName('tr');
                    for (var tr of trs) {
                        var newTr = document.createElement('tr');
                        newTr.style = tr.style;
                        tabelaNova.getElementsByTagName('tbody')[0].appendChild(newTr);
                        var tds = tr.getElementsByTagName('td');
                        if (tds.length === 1) {
                            var componentesTd = tds[0].children;
                            var newTd = document.createElement('td');
                            newTd.id = gerarId();
                            newTd.style = tds[0].style;
                            newTr.appendChild(newTd);
                            var idTdPrint = newTd.id;
                            for (var i = 0; i <= componentesTd.length; i++) {
                                var idComponente = gerarId();
                                var tdPrint = document.getElementById(idTdPrint);
                                if (componentesTd[i]) {
                                    var newComponente = stringToHTML(componentesTd[i]?.outerHTML);
