                    //{
                    //    str += LinhaEmBranco();
                    //    contadorQuebrarPagina = contadorQuebrarPagina + 1;

                    //}

                    retornoVerificacao = VerificaQuebra();
                    if (retornoVerificacao != string.Empty)
