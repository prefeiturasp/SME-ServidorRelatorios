    string MontaDivergenciasDiasAulasTitularCJ(IEnumerable<SME.SR.Infra.AulaTitularCJDataControleGradeDto> datas)
    {
        var str = "";
        var retornoVerificacao = string.Empty;
        var somenteCabecalho = false;

        str += MontaCabecalhoDivergenciasDiasAulasTitularCJ();
        contadorQuebrarPagina = contadorQuebrarPagina + 1;
        var ultimaData = datas.LastOrDefault();

        foreach (var data in datas)
        {
            str += MontaCabecalhoDivergenciasDiasAulasTitularCJSomenteData(data.Data);
            contadorQuebrarPagina = contadorQuebrarPagina + 2;

            foreach (var aula in data.Divergencias)
            {
                str += $@" <tr>
            <td width='20%' class='td-valor'>{aula.QuantidadeAulas}</td>
            <td width='30%' class='td-valor'>{aula.ProfessorTitular}</td>
            <td width='30%' class='td-valor'>{aula.ProfessorCJ}</td>
          </tr>";
                contadorQuebrarPagina = contadorQuebrarPagina + 1;
                retornoVerificacao = VerificaQuebra();
                if (retornoVerificacao != string.Empty)
                {
                    if(data.Divergencias.Count() > 1)
                    {
                        str = str + $@"</table>{retornoVerificacao}{MontaCabecalhoDivergenciasDiasAulasTitularCJ()}{MontaCabecalhoDivergenciasDiasAulasTitularCJSomenteData(data.Data)}";
                        contadorQuebrarPagina = contadorQuebrarPagina + 2;
                        somenteCabecalho = false;
                    } else
                    {
                        if(data.Data != ultimaData.Data)
                        {
                            str = str + $@"</table>{retornoVerificacao}{MontaCabecalhoDivergenciasDiasAulasTitularCJ()}";
                            contadorQuebrarPagina = contadorQuebrarPagina + 1;
                            somenteCabecalho = true;
                        }
                    }

                }
            }

            str += $@"</table>";
            if (!somenteCabecalho)
            {
                str += LinhaEmBranco();
                contadorQuebrarPagina = contadorQuebrarPagina + 1;
            }


            somenteCabecalho = false;

            retornoVerificacao = VerificaQuebra();
            if (retornoVerificacao != string.Empty)
            {
                if (data.Data != ultimaData.Data)
                {
                    str = str + $@"{retornoVerificacao}{MontaCabecalhoDivergenciasDiasAulasTitularCJ()}";
                    contadorQuebrarPagina = contadorQuebrarPagina + 1;
                }
            }
        }


        return str;
    }

