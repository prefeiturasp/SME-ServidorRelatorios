@model SME.SR.Infra.PlanoAulaDto
@using SME.SR.Infra.Utilitarios;
@{
    int contadorQuebrarPagina = 0;
    int contadorMaximoLinhasPorPagina = 67;
    int tamanhoMaximoLinha = 80;
    bool montarCabecalhoObj = true;

    string VerificaQuebra()
    {
        if (contadorQuebrarPagina >= contadorMaximoLinhasPorPagina)
        {
            contadorQuebrarPagina = 0;
            montarCabecalhoObj = true;

            var str = MontarCabecalho();
            return $@"<div style='page-break-before:always' />" + str;

        }
        return string.Empty;

    }

    int CalcularLinhas(int valorLinha = 0, int caracteres = 120)
    {
        if (valorLinha > 0)
        {
            if (valorLinha < caracteres)
            {
                return 1;
            }
            var valorMod = valorLinha % caracteres;
            int valorInt = valorLinha / caracteres;
            if (valorMod > 0)
            {
                return valorInt + 1;
            }
            else
            {
                return valorInt;
            }
        }

        return 1;
    }

    string MontaCabecalhoObjetivos()
    {
        var str = "";
        if (montarCabecalhoObj)
        {
            str = @"<table>
<tr>
<td width='100 %' class=tb-cabecalho>
OBJETIVOS DE APRENDIZAGEM E MEUS OBJETIVOS (CURRÍCULO DA CIDADE)
</td>
</tr>
</table> ";
            montarCabecalhoObj = false;

        }
        return str;
    }

    string MontaObjetivos()
    {
        var str = "";

        if (Model.Objetivos.Count() > 0)
        {
            str += MontaCabecalhoObjetivos();
            var first = Model.Objetivos.First();
            var last = Model.Objetivos.Last();

            @foreach (var objetivo in Model.Objetivos)
            {
                str += $@"<table><tbody>
<tr class='tabela-objetivos-items-tr'>
<td class='fonte-12 tabela-objetivos-items-titulo'>
{objetivo.Codigo}
</td>
<td class='fonte-12 tabela-objetivos-items-descricao'>
{objetivo.Descricao}
</td>
</tr>
</tbody>
</table>";
                var totalLinhasPorObjetivo = 3;
                if(objetivo.Descricao.Length > tamanhoMaximoLinha) {
                    var total = CalcularLinhas(objetivo.Descricao.Length, tamanhoMaximoLinha);
                    if (total > totalLinhasPorObjetivo) totalLinhasPorObjetivo = total;
                }
                contadorQuebrarPagina += totalLinhasPorObjetivo;
                str += VerificaQuebra();
                if(objetivo != last)
                {
                    str += MontaCabecalhoObjetivos();
                }
            }
        }
        else
        {
            str += MontaDescricao("OBJETIVOS DE APRENDIZAGEM E MEUS OBJETIVOS (CURRÍCULO DA CIDADE)", Model.Descricao);
        }

        return str;
    }



    string MontaDescricao(string titulo, string descricao)
    {
        if (descricao.Trim().Length == 0)
        {
            return "";
        }
        var str = "";
        var totalMinimoLinhas = 4;

        if(contadorQuebrarPagina + totalMinimoLinhas >= contadorMaximoLinhasPorPagina) {
            contadorQuebrarPagina += totalMinimoLinhas;
            str += VerificaQuebra();
        }

        str += "<div class='m-30'>";

        if (titulo != "")
        {
            str += $@"<table><tr><td width='100%' class='tb-cabecalho2'>{titulo}</td></tr></table>";
        }


        str += @"<table> <tbody><tr class='h-50'><td class='fonte-12 caixa-2'>";

        int tamanho = 0;
        descricao = UtilRegex.RemoverTagsHtmlMidia(descricao);
        descricao = UtilRegex.RemoverTagsHtml(descricao);

        for (int i = 0; i < descricao.Length; i++)
        {
            if (tamanho <= 100)
            {
                str += descricao[i];
                tamanho = tamanho + 1;
            }
            else
            {
                var retornoVerificacao = VerificaQuebra();
                if (retornoVerificacao != string.Empty)
                {
                    str += $@"</td> </tr> </tbody> </table> {retornoVerificacao} ";
                    if (titulo != "")
                    {
                        str += $@"<table><tr><td width='100%' class='tb-cabecalho2'>{titulo}</td></tr></table>";
                    }
                    str += "<table> <tbody><tr class='h-50'><td class='fonte-12 caixa-2'>";
                }
                else
                {
                    str += retornoVerificacao;
                }

                tamanho = 0;
                str += descricao[i];
            }
        }
        var totalLinhas = CalcularLinhas(tamanho, tamanhoMaximoLinha);
        contadorQuebrarPagina = contadorQuebrarPagina + (totalLinhas > totalMinimoLinhas ? totalLinhas : totalMinimoLinhas);

        if (!str.Substring(str.Length - 8).Equals("</table>"))
        {
            str += @" </tr> </tbody> </table>";
        }

        return str + "</div>";
    }

    string MontarCabecalho()
    {
        contadorQuebrarPagina = contadorQuebrarPagina + 12;
        var str =
           $@"<div>
<img class='img-logo-sgp' src='logoMono.png' alt='Logo SGP' />
</div>
<div class='titulo-sgp'>SGP - SISTEMA DE GESTÃO PEDAGÓGICA</div>
<div class='titulo-plano-aula'>
<p style='margin-bottom:0'>PLANO DE AULA - {Model.DataPlanoAula:dd/MM/yyyy} </p>
</div>
<div class='fonte-14 header-pagina'>
<table class='tblTopo'>
<tbody>
<tr>
<td width='35%'>DRE: {Model.Dre}</td>
<td width='40%'>UE: {Model.TipoEscola} {Model.Ue}</td>
<td width='15%'>TURMA:{Model.ModalidadeTurma.ShortName()} - {Model.Turma}</td>
</tr>
</tbody>
</table>
<table>
<tbody>
<tr>
<td class='campo-componente-curricular'>COMPONENTE CURRICULAR: {Model.ComponenteCurricular}</td>
</tr>
</tbody>
</table>
<table>
<tbody>
<tr>
<td class='campo-usuario'>USUÁRIO: {Model.Usuario}</td>
<td class='campo-rf'>RF: {Model.RF}</td>
<td class='campo-data'>DATA: {Model.Data:dd/MM/yyyy}</td>
</tr>
</tbody>
</table>
</div>";

        return str;

    }
}

