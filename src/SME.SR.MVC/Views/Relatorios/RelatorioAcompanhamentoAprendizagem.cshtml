            </tr>
        </thead>
        return "";
    }

    string CalcularDescricaoRegistroIndividual(string estudante, string data, string descricaoRetante)
    {
        int numeroLinhasDescricaoRestante = CalcularLinhas(descricaoRetante.Length);

        if (numeroLinhasDescricaoRestante > 50)
        {
            DivideDescricaoRegistroIndividual(estudante, data, descricaoRetante);
        }
        else
        {
            QuebrarLinhas(numeroLinhasDescricaoRestante, estudante);
            MontarDadosRegistroIndividual(data, descricaoRetante);
        }

        return "";
    }

    string DivideDescricaoRegistroIndividual(string estudante, string data, string descricao)
    {
        var descricaoDivida = descricao.Substring(0, 5000);
        var descricaoRetante = descricao.Substring(5001);

        QuebrarLinhas(43, estudante);
        MontarDadosRegistroIndividual(data, descricao);
        CalcularDescricaoRegistroIndividual(estudante, data, descricaoRetante);

        return "";
    }

