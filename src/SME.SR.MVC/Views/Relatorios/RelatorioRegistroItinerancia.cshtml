@model SME.SR.Infra.RelatorioRegistroItineranciaDto;

@{
    int contadorQuebrarPagina = 0;
    int contadorMaximoLinhasPorPagina = 53;
    int contadorPagina = 0;

    bool VerificaQuebra(int linhas = 0)
    {
        if (contadorQuebrarPagina + linhas >= contadorMaximoLinhasPorPagina)
        {
            contadorQuebrarPagina = 0;
            contadorPagina = contadorPagina + 1;
            return true;
        }
        return false;
    }

    string MontarCabecalho()
    {
        contadorQuebrarPagina = contadorQuebrarPagina + 9;
        var str =
            $@"<div>
<img class='img-logo-sgp' src='logoMono.png' alt='Logo SGP' />
</div>
<div class='titulo-sgp'>SGP - SISTEMA DE GESTÃO PEDAGÓGICA</div>
<div class='titulo-relatorio'>RELATÓRIO DE ITINERÂNCIA</div>
<div class='fonte-14 header-pagina'>
<table class='tblTopo'>
<tbody>
<tr>
<td  width='30%' class='espaco-esquerda-15 sem-border-bottom'>DRE: {Model.Dre}</td>
<td width='70%' class='espaco-esquerda-15 sem-border-bottom'>UE: {Model.Ue}</td>
</tr>
</tbody>
</table>
<table>
<tbody>
<tr>
<td  width='65%' class='espaco-esquerda-15'>USUÁRIO: {Model.Usuario}</td>
<td width='17%' class='espaco-esquerda-15'>RF: {Model.RF}</td>
<td width='18%' class='espaco-esquerda-15'>DATA: {Model.DataSolicitacao}</td>
</tr>
</tbody>
</table>
</div>
";

        return str;
    }

    string EspacoEmBranco()
    {
        <tr>
            <td colspan="2"></td>
        </tr>
        return "";
    }

    string informacoesQuebra(string estudante, bool mostrarEstudante = true)
    {
        @Html.Raw("</tbody></table>");
        @Html.Raw("<div style='page-break-before:always'></div>");
        @Html.Raw(MontarCabecalho())
        @Html.Raw("<table class='tabela-cabecalho'>");

        if (mostrarEstudante)
        {
            @Html.Raw(MontarLinhaSimples(estudante))
        }

        return "";
    }

    string MontarCabecalhoObjetivos()
    {
        <tr>
            <td class="fundo-cinza">OBJETIVOS DA ITENERÂNCIA</td>
            <td class="fundo-cinza">SITUAÇÃO ATIVO/INATIVO L -> @contadorQuebrarPagina</td>
        </tr>
        return "";
    }

    string MontarObjetivos(IEnumerable<SME.SR.Infra.ObjetivosRegistroItineranciaDto> listaObjetivos, string estudante)
    {
        @Html.Raw(MontarCabecalhoObjetivos())

        contadorQuebrarPagina++;

        @foreach (var objetivo in listaObjetivos)
        {
            <tr>
                <td>@objetivo.NomeObjetivo</td>
                <td>@objetivo.SituacaoObjetivo L -> @contadorQuebrarPagina</td>
            </tr>
            contadorQuebrarPagina++;

            var quebra = VerificaQuebra();

            if (quebra)
            {
                informacoesQuebra(estudante);
                contadorQuebrarPagina++;
                MontarCabecalhoObjetivos();
                contadorQuebrarPagina++;
            }
        }

        return "";
    }

    string MontarSecoes(string nomeSecao, string valorSecao, bool alinharCentro = false)
    {
        var classeAlinhamento = alinharCentro ? "" : "alinhar-esquerda";
        <tr>
            <td colspan="2" class="fundo-cinza">@nomeSecao L -> @contadorQuebrarPagina</td>
        </tr>
        <tr>
            <td colspan="2" class="@classeAlinhamento" style="padding: 3px;">@valorSecao L -> @contadorQuebrarPagina</td>
        </tr>

        contadorQuebrarPagina = contadorQuebrarPagina + 2;

        return "";
    }

    string MontarLinhaSimples(string valorLinha)
    {
        <tr>
            <td colspan="2" class="fundo-cinza">@valorLinha L -> @contadorQuebrarPagina</td>
        </tr>

        return "";
    }

    string CalcularLinhas(int valorLinha = 0)
    {
        if (valorLinha > 0)
        {
            var numeroLinhasDescricao = valorLinha / 180;

            if(numeroLinhasDescricao > 1)
            {
                contadorQuebrarPagina = contadorQuebrarPagina + numeroLinhasDescricao;
            }else
            { 
                contadorQuebrarPagina++;
            }
        }
        return "";
    }

    string QuebrarLinhas(string estudante, bool mostrarEstudante = true)
    {
        var quebra = VerificaQuebra(2);

        if (quebra)
        {
            informacoesQuebra(estudante, mostrarEstudante);
            contadorQuebrarPagina++;
        }
        return "";
    }

    <!DOCTYPE html>
    <html lang="pt-BR">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Relatório de Itinerância</title>
    </head>
    <body class="body-relatorio">
        <style>

            .tblTopo th, td {
                padding: 3px 0;
                text-align: left;
            }

            .body-relatorio {
                margin: 0.5cm auto;
                font-family: Roboto, sans-serif;
                width: 21cm;
                min-height: 29.7cm;
                background: white;
                color: #42474a;
            }

            .titulo-sgp {
                text-align: right;
                font-size: 14px;
                font-weight: bold;
            }

            .titulo-relatorio {
                text-align: right;
                font-size: 14.5px;
                margin-top: 7px;
            }

            .header-pagina {
                margin-top: 33px;
                margin-bottom: 22px;
            }

                .header-pagina td {
                    text-align: left;
                }

            table {
                display: table;
                width: 100%;
                border-color: #42474a;
                empty-cells: show;
                border: none;
                border-collapse: collapse;
            }

            thead {
                background-color: #f3f3f3;
            }

            th {
                border: 1px solid #42474a;
                font-weight: normal;
            }

            td {
                border: 1px solid #42474a;
                text-align: center;
            }

            .tabela-cabecalho tr {
                font-size: 12px;
                height: 24px;
            }

            .mt-25 {
                margin-top: 25px;
            }

            .fonte-14 {
                font-size: 14px !important;
            }

            .alinhar-esquerda {
                text-align: left;
            }

            .espaco-esquerda-15 {
                padding-left: 15px;
            }

            .fundo-cinza {
                background-color: #f3f3f3;
            }

            .negrito {
                font-weight: bold;
            }

            .sem-border-bottom {
                border-bottom: 0;
            }

            .sem-border-top {
                border-bottom: 0;
            }

            .thLimpo {
                background-color: #ffffff;
                border: 0;
                height: 22px;
            }

            .img-logo-sgp {
                height: 64px;
                float: left;
            }

            .centralizar {
                text-align: center;
            }
        </style>
        <div>
            @Html.Raw(MontarCabecalho())

            @{ int registrosIndex = 0; }

            @foreach (var registros in Model.Registros)
            {
                <table class="tabela-cabecalho">
                    @{
                        var dataVisita = registros.DataVisita;
                        int secoesIndex = 0;
                    }

                    @foreach (var secoes in registros.Secoes)
                    {
                        var estudante = secoes.Estudante;
                        var acompanhamentoSituacao = secoes.AcompanhamentoSituacao;
                        var encaminhamentos = secoes.Encaminhamentos;
                        var dataRetorno = secoes.DataRetorno;
                        var temEstudante = String.IsNullOrEmpty(estudante);

                        <tbody>
                            @if (!temEstudante)
                            {
                                @Html.Raw(MontarLinhaSimples(estudante))
                                contadorQuebrarPagina++;
                            }

                            @Html.Raw(MontarLinhaSimples(dataVisita))

                            @{ contadorQuebrarPagina++; }

                            @Html.Raw(MontarObjetivos(registros.Objetivos, estudante))

                            @if (!temEstudante)
                            {
                                var descritivoEstudante = secoes.DescritivoEstudante;
                                MontarSecoes("DESCRITIVO DO ESTUDANTE", descritivoEstudante);
                                CalcularLinhas(descritivoEstudante.Length);

                            }

                            @Html.Raw(QuebrarLinhas(estudante))

                            @Html.Raw(MontarSecoes("ACOMPANHAMENTO DA SITUAÇÃO", acompanhamentoSituacao))
                            @Html.Raw(CalcularLinhas(acompanhamentoSituacao.Length))
                            @Html.Raw(QuebrarLinhas(estudante))

                            @Html.Raw(MontarSecoes("ENCAMINHAMENTOS", encaminhamentos))
                            @Html.Raw(CalcularLinhas(encaminhamentos.Length))
                            @Html.Raw(QuebrarLinhas(estudante))

                            @Html.Raw(MontarSecoes("DATA PARA RETORNO/VERIFICAÇÃO", dataRetorno, true))

                            @if (secoesIndex < registros.Secoes.Count() - 1)
                            {
                                QuebrarLinhas(estudante, false);
                                contadorQuebrarPagina++;
                            }
                        </tbody>

                        if (secoesIndex < registros.Secoes.Count() - 1)
                        {
                            @Html.Raw(EspacoEmBranco());
                            contadorQuebrarPagina++;
                        }

                        secoesIndex++;
                    }
                </table>

                if (registrosIndex < Model.Registros.Count() - 1)
                {
                    contadorQuebrarPagina = 0;
                    @Html.Raw("<div style='page-break-before:always'></div>")
                    @Html.Raw(MontarCabecalho())                    
                }

                registrosIndex++;
            }
        </div>
    </body>
</html>
}